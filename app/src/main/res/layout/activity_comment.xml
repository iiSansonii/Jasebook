<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/commrec"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    tools:listitem="@layout/comment_design"
    app:layout_constraintBottom_toTopOf="@id/commfield"
    />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/commfield"
        android:hint="type comment"
        app:layout_constraintBottom_toBottomOf="parent"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/commfield"
        app:layout_constraintStart_toEndOf="@+id/commfield"
        android:id="@+id/commsub"
        android:text="send"
        />
</androidx.constraintlayout.widget.ConstraintLayout>